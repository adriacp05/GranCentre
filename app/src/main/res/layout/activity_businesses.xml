<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Businesses">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7593d4"
        android:layout_column="1"
        android:layout_row="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="Tiendas"
            android:onClick="onClick"
            android:id="@+id/bttTiendas" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="Servicios"
            android:onClick="onClick"
            android:id="@+id/bttServicios" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="Restaurantes"
            android:onClick="onClick"
            android:id="@+id/bttRestaurantes" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="Ocio"
            android:onClick="onClick"
            android:id="@+id/bttOcio" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeebb"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/areaEmpresas">

        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            >

            <TextView
                android:text="Jugueteria Camillo"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/empTitulo1"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:id="@+id/empImagen1"
                    android:src="@drawable/tienda1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="150dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="Tienda de juguetes para niños de 0 a 12 años."
                    android:id="@+id/empTexto1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_column="1"
                    android:text="901 22 54 85"
                    android:textColor="#0000ff"
                    android:textStyle="bold"
                    android:id="@+id/empTelefono1"/>
            </GridLayout>

        </GridLayout>

        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0">

            <TextView
                android:text="Tzara"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/empTitulo2"/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:id="@+id/empImagen2"
                    android:src="@drawable/tienda2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="150dp"
                    android:text="Tienda de ropa de invierno para todas las personas"
                    android:id="@+id/empTexto2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_column="1"
                    android:text="921 81 45 75"
                    android:textColor="#0000ff"
                    android:textStyle="bold"
                    android:id="@+id/empTelefono2"/>

            </GridLayout>

        </GridLayout>

        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0">

            <TextView
                android:text="Supermercado Eurosky"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/empTitulo3"/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:id="@+id/empImagen3"
                    android:src="@drawable/tienda3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="150dp"
                    android:text="Gran supermercado de la cadena Eurosky"
                    android:id="@+id/empTexto3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_column="1"
                    android:text="903 77 88 99"
                    android:textColor="#0000ff"
                    android:textStyle="bold"
                    android:id="@+id/empTelefono3"/>

            </GridLayout>

        </GridLayout>



    </GridLayout>

</GridLayout>