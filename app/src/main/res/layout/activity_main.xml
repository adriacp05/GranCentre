<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btBusinesses"
            android:background="@drawable/business"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btRestaurants"
            android:background="@drawable/restaurants"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btMovies"
            android:background="@drawable/movies"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btWeather"
            android:background="@drawable/weather"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btEvents"
            android:background="@drawable/events"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/btHotels"
            android:background="@drawable/hotels"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />
    </GridLayout>

</android.support.constraint.ConstraintLayout>